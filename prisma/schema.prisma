// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Table pour tes examens
model Examen {
  id        String   @id @default(cuid())
  matiere   String
  date      String
  userId    String   // Lien avec l'ID de l'utilisateur Clerk
  createdAt DateTime @default(now())
}

// Table pour ta To-Do List (Optionnel mais recommand√© pour la suite)
model Todo {
  id        String   @id @default(cuid())
  userId    String
  text      String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}