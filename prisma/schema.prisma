// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String   @id @default(cuid())
  userId    String
  title     String
  day       String
  startTime String
  endTime   String
  weekType  String
  details   String?
  color     String   @default("Gris")
  createdAt DateTime @default(now())
}

model Todo {
  id           String   @id @default(cuid())
  userId       String
  task         String
  completedDays String  @default("")
  createdAt    DateTime @default(now())
}

model Examen {
  id        String   @id @default(cuid())
  userId    String
  subject   String
  title     String?
  date      DateTime
  createdAt DateTime @default(now())
}
